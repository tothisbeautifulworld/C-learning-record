#include<stdio.h>
int main()
{
	int a,b;
	scanf("%d" "%d",&a,&b);
	int d=a/b,e=a+b;
	double c=(double)a/(double)b;
	printf("%d + %d = %d\n",a,b,a+b);
	printf("%d - %d = %d\n",a,b,a-b);
	printf("%d * %d = %d\n",a,b,a*b);
	if(d>e%2){
		printf("%d / %d = %d\n",a,b,a/b);
	}else{
		printf("%d / %d = %.2lf",a,b,c);
	}
	return 0;
}
